<body>
  <h1>AI Meme Generator</h1>
  <div class="container">
    <label for="image-upload">Upload an Image</label>
    <input type="file" id="image-upload" accept="image/*" />

    <label for="top-text-input">Top Text</label>
    <input type="text" id="top-text-input" placeholder="Enter top text or use AI helper" maxlength="50" />

    <div class="ai-suggestions" id="top-ai-suggestions"></div>

    <label for="bottom-text-input">Bottom Text</label>
    <input type="text" id="bottom-text-input" placeholder="Enter bottom text or use AI helper" maxlength="50" />

    <div class="ai-suggestions" id="bottom-ai-suggestions"></div>

    <button id="download-btn" disabled>Download Meme</button>

    <div id="meme-container" aria-label="Meme preview">
      <img id="meme-image" alt="Meme preview image" src="" />
      <div id="top-text" class="meme-text" contenteditable="true" aria-label="Top meme text"></div>
      <div id="bottom-text" class="meme-text" contenteditable="true" aria-label="Bottom meme text"></div>
    </div>
  </div>
  <footer>
    &copy; 2024 AI Meme Generator. All rights reserved.
  </footer>
<script>
  const imageUpload = document.getElementById('image-upload');
  const memeImage = document.getElementById('meme-image');
  const topTextInput = document.getElementById('top-text-input');
  const bottomTextInput = document.getElementById('bottom-text-input');
  const topTextDiv = document.getElementById('top-text');
  const bottomTextDiv = document.getElementById('bottom-text');
  const downloadBtn = document.getElementById('download-btn');
  const topAISuggestions = document.getElementById('top-ai-suggestions');
  const bottomAISuggestions = document.getElementById('bottom-ai-suggestions');

  const sampleMemesTop = [
    'When you realize',
    'That moment when',
    'The face you make',
    'Me trying to',
    'When you accidentally',
    'Expectation vs Reality',
  ];
  const sampleMemesBottom = [
    'this is actually working',
    'you forgot your keys',
    'the code finally runs',
    'you drop your phone',
    'Monday morning hits hard',
    'success tastes sweet',
  ];

  function setImageFromFile(file) {
    const reader = new FileReader();
    reader.onload = function(e) {
      memeImage.src = e.target.result;
      memeImage.style.display = 'block';
      downloadBtn.disabled = false;
      resetTexts();
    };
    reader.readAsDataURL(file);
  }

  function resetTexts() {
    topTextInput.value = '';
    bottomTextInput.value = '';
    topTextDiv.textContent = '';
    bottomTextDiv.textContent = '';
    clearAISuggestions();
  }

  function clearAISuggestions() {
    topAISuggestions.innerHTML = '';
    bottomAISuggestions.innerHTML = '';
  }

  function createAIButtons(container, textArray, targetInput) {
    container.innerHTML = '';
    textArray.forEach(text => {
      const btn = document.createElement('button');
      btn.textContent = text;
      btn.className = 'ai-btn';
      btn.type = 'button';
      btn.addEventListener('click', () => {
        targetInput.value = text;
        updateTextDivs();
      });
      container.appendChild(btn);
    });
  }

  function updateTextDivs() {
    topTextDiv.textContent = topTextInput.value.toUpperCase();
    bottomTextDiv.textContent = bottomTextInput.value.toUpperCase();
  }

  imageUpload.addEventListener('change', (e) => {
    const file = e.target.files[0];
    if (file && file.type.startsWith('image/')) {
      setImageFromFile(file);
    } else {
      alert('Please upload a valid image file.');
      e.target.value = '';
    }
  });

  topTextInput.addEventListener('input', updateTextDivs);
  bottomTextInput.addEventListener('input', updateTextDivs);

  // Also update editable divs changes back to inputs
  topTextDiv.addEventListener('input', () => {
    topTextInput.value = topTextDiv.textContent;
  });
  bottomTextDiv.addEventListener('input', () => {
    bottomTextInput.value = bottomTextDiv.textContent;
  });

  createAIButtons(topAISuggestions, sampleMemesTop, topTextInput);
  createAIButtons(bottomAISuggestions, sampleMemesBottom, bottomTextInput);

  // Download meme as PNG using html2canvas
  downloadBtn.addEventListener('click', () => {
    if (!memeImage.src) return;
    downloadBtn.disabled = true;
    html2canvas(document.getElementById('meme-container')).then(canvas => {
      const link = document.createElement('a');
      link.download = 'ai-meme.png';
      link.href = canvas.toDataURL('image/png');
      link.click();
      downloadBtn.disabled = false;
    }).catch(() => {
      alert('Failed to generate image. Please try again.');
      downloadBtn.disabled = false;
    });
  });

  // Dynamically load html2canvas script for download functionality
  const script = document.createElement('script');
  script.src = 'https://cdn.jsdelivr.net/npm/html2canvas@1.4.1/dist/html2canvas.min.js';
  script.integrity = 'sha384-q3z2ITkSWyQcmlsGvReG+OJUQ3lsFuXioHcWbTeP6FB5Dr+S/dXh0mGTaOl7H8ad';
  script.crossOrigin = 'anonymous';
  document.body.appendChild(script);
</script>
</body>
</html>


